{
    "default": {
        "dryRun": false,
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "paths": [
            "src/test/features/**/*.feature"
        ],
        "require": [
            "src/test/steps/**/*.ts",
            "src/base/base.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            [
                "json",
                "reports/cucumber_report.json"
            ],
            [
                "junit",
                "reports/cucumber_report.xml"
            ],
            [
                "html",
                "reports/cucumber_report.html"
            ]
        ]
    }
}